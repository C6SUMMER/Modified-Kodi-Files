<playercorefactory> 
	<players> 
		<player name="PowerDVD" type="ExternalPlayer" audio="false" video="true"> 
			<filename>C:\Users\Home\AppData\Roaming\Kodi\userdata\PlayBlueRay.cmd</filename> 
			<args>"{1}"</args> 
			<hidexbmc>False</hidexbmc> 
			<hideconsole>true</hideconsole> 
			<forceontop>false</forceontop> 
		</player> 
	</players> 
	<rules action="prepend"> 
		<!-- Bluray ISO/BDMV --> 
		<rule filetypes="iso|bdmv|mpls"/> 
	</rules> 
</playercorefactory>