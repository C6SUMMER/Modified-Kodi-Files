<keymap>
  <global>
    <keyboard>
      <one mod="ctrl,alt">ActivateWindow(music)</one>
      <two mod="ctrl,alt">ActivateWindow(Videos,MovieTitles)</two>
      <three mod="ctrl,alt">ActivateWindow(Videos,TvShowTitles)</three>
      <four mod="ctrl,alt">ActivateWindow(tvchannels)</four>
	    <tab>ContextMenu</tab>
	    <return mod="longpress">ToggleWatched</return>
	    <backspace mod="longpress">PreviousMenu</backspace>
    </keyboard>
  </global>
  <FullscreenVideo>
    <keyboard>
	    <left mod="ctrl">subtitledelayminus</left>
      <right mod="ctrl">subtitledelayplus</right>
      <left mod="ctrl,shift">audiodelayminus</left>
      <right mod="ctrl,shift">audiodelayplus</right>
	    <o mod="ctrl">ActivateWindow(subtitlesearch)</o>
      <u>ActivateWindow(SubtitleSearch)</u>
    </keyboard>
  </FullscreenVideo>
</keymap>
